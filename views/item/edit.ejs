<%- include('./partial/header.ejs') %>
<div class="SignUpPage">
    <form class="form" method="POST" action="/item/edit" enctype="multipart/form-data">
        <h1 class="textCenter">Edit Item</h1>
        <div class="inputGroup">
            <label class="signUpLabel">Item Image</label>
            <input class="SignUpInput" name="imageURL" type="file" value="<%= item.imageURL %>"/>
        </div>
    
        <div class="inputGroup">
            <label class="signUpLabel">Item Name</label>
            <input class="SignUpInput" name="title" type="text" value="<%= item.title %>"/>
        </div>
    
        <div class="inputGroup">
            <label class="signUpLabel">Item Description</label>
            <input class="SignUpInput" name="des" type="text" value="<%= item.des %>"/>
        </div>
    
        <div class="inputGroup">
            <label class="signUpLabel">Item Category</label>
            <select class="SignUpInput select" name="category" value="<%= item.category %>">
                <option>Foods</option>
                <option>Drinks</option>
                <option>Deserts</option>
            </select>
        </div>
    
        <div class="inputGroup">
            <label class="signUpLabel">Item Price</label>
            <input class="SignUpInput" name="price" type="text" value="<%= item.price %>"/>
        </div>
    
        <input type="hidden" name="id" value="<%= item.id %>">
        
        <button class="btn addCart" type="submit">Update Item</button>
    </form>
</div>
