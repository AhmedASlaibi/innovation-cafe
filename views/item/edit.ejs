<h1>edit page</h1>

<form method="POST" action="/item/edit" >

    <div>
        <label>Image</label>
        <input name="imageURL" type="file" value="<%= item.imageURL %>"/>
    </div>

    <div>
        <label>Title</label>
        <input name="title" type="text" value="<%= item.title %>"/>
    </div>

    <div>
        <label>Content</label>
        <textarea name="content" required><%= article.content %></textarea>
    </div>

    <input type="hidden" name="id" value="<%= article.id %>">
    
    <button type="submit">Update Article</button>
</form>